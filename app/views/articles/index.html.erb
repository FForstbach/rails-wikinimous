<h1>Articles#index</h1>

<% @articles.each do |a| %>
  <ul>
    <li><%= "#{a.title}" %></li>
    <li><%= "#{a.content}" %></li>
    <li><%= link_to "Show", article_path(a.id) %></li>
    <li><%= link_to "Edit", edit_article_path(a.id) %></li>
    <li><%= link_to "Delete", article_path(a.id), method: :delete %></li>
  </ul>
<% end %>

<%= link_to "Create New Article", new_article_path %>


